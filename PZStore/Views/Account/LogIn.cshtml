@model PZStore.Models.Account.LoginModel

<div class="modal fade in" id="signInModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sign In</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            @using (@Html.BeginForm())
            {
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="#" method="post">
                        <div class="form-group">
                            <i class="fa fa-envelope-square"></i>
                            @Html.TextBoxFor(model => model.Email, new
                            {
                                @type = "email",
                                @class = "form-control",
                                @placeholder = "Email",
                                @required = "required"
                            })
                        </div>
                        <div class="form-group">
                            <span><i class="fa fa-lock"></i></span>
                            @Html.TextBoxFor(model => model.Password, new
                            {
                                @type = "password",
                                @class = "form-control",
                                @placeholder = "Password",
                                @required = "required"
                            })
                        </div>
                        <input type="submit" class="btn btn-success btn-block btn-lg" value="LOGIN">
                    </form>
                </div>
            }

            <!-- Modal footer -->
            <div class="modal-footer">
                <a href="#" style="margin:auto;">Forgot Password?</a>
            </div>

        </div>
    </div>
</div>