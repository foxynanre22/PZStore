@model PZStore.Models.Account.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="signIn" style="margin:15px;text-align:center">

    <div style="text-align:center">
        <h4>Log In</h4>
        <hr />
    </div>

    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group" style="text-align:center">
            <i class="fa fa-envelope-square"></i>
            @Html.TextBoxFor(model => model.Email, new
            {
                @type = "email",
                @class = "form-control",
                @placeholder = "Email",
                @required = "required",
                @style = "width: 25%; margin: auto;"
            })
            @Html.ValidationMessageFor(model => model.Email, String.Empty, new { @style = "color:red" })
            @Html.ValidationMessage("unregisteredUser", new { @style = "color:red" })
            @Html.ValidationMessage("unconfirmedUser", new { @style = "color:red" })     
        </div>
        <div class="form-group" style="text-align:center">
            <span><i class="fa fa-lock"></i></span>
            @Html.TextBoxFor(model => model.Password, new
            {
                @type = "password",
                @class = "form-control",
                @placeholder = "Password",
                @required = "required",
                @style = "width: 25%; margin: auto;"
            })
            @Html.ValidationMessageFor(model => model.Password, String.Empty, new { @style = "color:red" })
            @Html.ValidationMessage("unregisteredUser", new { @style = "color:red" })
        </div>
        <input type="submit" class="btn btn-success btn-block btn-lg" value="LOGIN"
               style="width:10%; margin:auto;">
    }
    <hr />
</div>