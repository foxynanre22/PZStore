@using Domain.Entities
@model Product

<div class="col-md-3">
    <div class="card text-center">
        <img src="@Model.Image" alt="" class="card-img-top" />
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">
                @Model.Description
            </p>
            <a href="" class="btn btn-info">SHOW</a>
        </div>
    </div>
</div>
