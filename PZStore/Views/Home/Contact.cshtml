@{
    ViewBag.Title = "Contact PZStore";
}
<link rel="stylesheet" href="~/Content/pages/contact.css"/>
<div class="container-fluid text-center m-2">
    <h2>We can answer all you questions...</h2>
    <p>so grab a cup of coffee and tell us what you want :)</p>
</div>

<figure class="container-fluid">
    <div class="fixed-wrap">
        <div id="fixed">
            <form class="contact-form">
                <div class="form-group">
                    <input type="text" placeholder="Your name" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea placeholder="Message" class="form-control" rows="5"></textarea>
                </div>
                <div class="form-group" id="send_div">
                    @Html.ActionLink("Send", "", "", new { area = "" }, new { @class = "btn btn-success" })
                </div>
            </form>
        </div>
    </div>
</figure>