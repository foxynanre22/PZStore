@model PZStore.Models.ContactPage.ContactPageModel
@{
    ViewBag.Title = "Contact PZStore";
}
<link rel="stylesheet" href="~/Content/pages/contact.css"/>
<div class="container-fluid text-center m-2">
    <h2>We can answer all you questions...</h2>
    <p>so grab a cup of coffee and tell us what you want :)</p>
</div>

<figure class="container-fluid">
    <div class="fixed-wrap">
        <div id="fixed">
            @using (@Html.BeginForm(null, null, FormMethod.Post, new { @class = "contact-form" }))
             {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.TextBoxFor(model => model.Name, new
                    {
                        @type = "text",
                        @class = "form-control",
                        @placeholder = "Your Name",
                        @required = "required"
                    })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new
                    {
                        @type = "email",
                        @class = "form-control",
                        @placeholder = "Your Email",
                        @required = "required"
                    })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows="5", @placeholder="Message" })
                </div>
                <div class="form-group" id="send_div">
                    <input type="submit" class="btn btn-success" value="Send">       
                </div>
             }
        </div>
    </div>
</figure>