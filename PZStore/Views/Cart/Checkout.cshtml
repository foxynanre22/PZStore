@model PZStore.Models.Cart.OrderDetails

@{
    ViewBag.Title = "PZStore: order form";
}
<div class="container" style="padding:2%;">
    <h2>Checkout now</h2>
    <p>Please enter your contact details and we will send the goods right away!</p>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary();
        <h3>Information</h3>
        <div class="form-group">
            <label>Your name:</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Your email adress:</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>

        <h3>Delivery address</h3>
        <div class="form-group">
            <label>Your Adress:</label>
            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>City:</label>
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Country:</label>
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
        </div>

        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Process order" />
        </div>
    }
</div>